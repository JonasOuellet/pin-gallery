{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "../out",
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "./**/*.spec"
    ]
}